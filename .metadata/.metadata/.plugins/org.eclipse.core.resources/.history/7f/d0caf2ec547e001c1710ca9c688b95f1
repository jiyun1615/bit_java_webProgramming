package com.test.ex.dao;

import java.sql.*;
import java.util.*;

public class Bdao {
	Connection dbconn;
	PreparedStatement pstmt;
	ResultSet rs;
	String url = "jdbc:oracle:thin:@localhost:1521.XE";
	String uid = "system";
	String pwd = "1234";
	
	public Bdao() {
		try {
			Class.forName("oracle.jdbc.driver,Oracle");
			dbconn = DriverManager.getConnection(url,uid,pwd);
			System.out.println("데이터베이스 연결!");
		}catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public Bdao(Connection dbconn, PreparedStatement pstmt, ResultSet rs, String url, String uid, String pwd) {
		super();
		this.dbconn = dbconn;
		this.pstmt = pstmt;
		this.rs = rs;
		this.url = url;
		this.uid = uid;
		this.pwd = pwd;
	}
	
}
